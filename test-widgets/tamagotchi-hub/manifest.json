{
  "id": "tamagotchi-hub",
  "name": "Tamagotchi Hub",
  "version": "1.0.0",
  "kind": "2d",
  "entry": "index.html",
  "description": "Central dashboard and state coordinator for the Tamagotchi widget ecosystem. Displays pet status, moodlets overview, and task progress. Manages state persistence and sync between all Tamagotchi widgets.",
  "tags": ["tamagotchi", "hub", "dashboard", "coordinator", "sync", "state"],
  "author": "StickerNest",
  "capabilities": {
    "draggable": true,
    "resizable": true,
    "rotatable": false
  },
  "inputs": {
    "petStatus": {
      "type": "object",
      "description": "Receive pet status updates"
    },
    "moodChanged": {
      "type": "object",
      "description": "Receive mood changes from moodlet widget"
    },
    "taskCompleted": {
      "type": "object",
      "description": "Receive task completion notifications"
    },
    "dailyProgress": {
      "type": "object",
      "description": "Receive daily task progress"
    },
    "importState": {
      "type": "object",
      "description": "Import saved hub state"
    }
  },
  "outputs": {
    "syncAll": {
      "type": "object",
      "description": "Broadcast sync signal to all widgets"
    },
    "setMood": {
      "type": "object",
      "description": "Send mood update to pet widget"
    },
    "triggerAnimation": {
      "type": "string",
      "description": "Trigger pet animation"
    },
    "taskCompletedRelay": {
      "type": "object",
      "description": "Relay task completion to moodlet widget"
    },
    "stateExport": {
      "type": "object",
      "description": "Export full ecosystem state"
    }
  },
  "size": {
    "width": 380,
    "height": 520,
    "minWidth": 320,
    "minHeight": 400
  }
}
