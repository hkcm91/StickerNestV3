# Environment Variables for StickerNest v2

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# AI Providers for Widget Generation (choose at least one)

# Anthropic Claude API (RECOMMENDED - best for code generation)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Replicate API (fallback - for Llama and other models)
# Get your key at: https://replicate.com/account/api-tokens
VITE_REPLICATE_API_TOKEN=your_replicate_token_here

# OpenAI API (optional - for GPT models)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google AI API (optional - for Gemini models)
# Get your key at: https://aistudio.google.com/
GOOGLE_API_KEY=your_google_api_key_here

# ============================================
# Stripe Configuration (Payments & Subscriptions)
# ============================================

# Stripe API Keys
# Get your keys at: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Webhook Secret
# Get this when creating a webhook endpoint at: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Connect (for creator monetization)
# Get your client ID at: https://dashboard.stripe.com/settings/connect
STRIPE_CONNECT_CLIENT_ID=ca_your_connect_client_id_here

# Stripe Product IDs (create these in Stripe Dashboard)
STRIPE_PRODUCT_STARTER=prod_starter_id
STRIPE_PRODUCT_PRO=prod_pro_id
STRIPE_PRODUCT_ENTERPRISE=prod_enterprise_id

# Stripe Price IDs (create these in Stripe Dashboard for each product)
# Monthly prices
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly_id
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly_id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id

# Yearly prices (typically ~17% discount)
STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly_id
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly_id
STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly_id

# Platform Settings
STRIPE_CURRENCY=usd
PLATFORM_FEE_PERCENT=15
MINIMUM_PAYOUT_AMOUNT=1000

# Stripe Redirect URLs (update for production)
STRIPE_SUCCESS_URL=http://localhost:5173/settings/billing?success=true
STRIPE_CANCEL_URL=http://localhost:5173/settings/billing?canceled=true
STRIPE_CONNECT_RETURN_URL=http://localhost:5173/settings/creator?connected=true
STRIPE_CONNECT_REFRESH_URL=http://localhost:5173/settings/creator?refresh=true

# ============================================
# Application URLs
# ============================================

# Base URL for the application (used for redirects, emails, etc.)
APP_URL=http://localhost:5173
