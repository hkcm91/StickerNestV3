{
    "id": "canvas-grid",
    "name": "Canvas Grid Controller",
    "version": "1.0.0",
    "kind": "2d",
    "entry": "index.html",
    "capabilities": {
        "draggable": true,
        "resizable": true
    },
    "size": {
        "width": 280,
        "height": 440,
        "minWidth": 220,
        "minHeight": 340,
        "scaleMode": "contain"
    },
    "events": {
        "emits": ["canvas:set-grid", "canvas:set-transform"],
        "listens": []
    },
    "io": {
        "inputs": [],
        "outputs": [
            {
                "id": "canvas:set-grid",
                "type": "object",
                "description": "Controls canvas grid visibility and size"
            },
            {
                "id": "canvas:set-transform",
                "type": "object",
                "description": "Controls canvas zoom and rotation"
            }
        ]
    }
}
