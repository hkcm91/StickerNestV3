{
    "id": "canvas-filters",
    "name": "Canvas Filters",
    "version": "1.0.0",
    "kind": "2d",
    "entry": "index.html",
    "capabilities": {
        "draggable": true,
        "resizable": true
    },
    "size": {
        "width": 300,
        "height": 480,
        "minWidth": 240,
        "minHeight": 380,
        "scaleMode": "contain"
    },
    "events": {
        "emits": ["canvas:set-filters", "canvas:set-overlay"],
        "listens": []
    },
    "io": {
        "inputs": [],
        "outputs": [
            {
                "id": "canvas:set-filters",
                "type": "object",
                "description": "Sets canvas filter effects (brightness, contrast, etc.)"
            },
            {
                "id": "canvas:set-overlay",
                "type": "object",
                "description": "Sets canvas overlay effects (vignette, scanlines, noise)"
            }
        ]
    }
}
