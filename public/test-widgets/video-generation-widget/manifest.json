{
  "id": "video-generation-widget",
  "name": "Video Generator",
  "version": "1.1.0",
  "description": "AI-powered video generation with 10+ models including Kling, MiniMax, Luma Ray 2, Hunyuan, and more. Features thumbnails and model badges. Syncs with Prompt Options widget.",
  "kind": "2d",
  "author": "StickerNest",
  "entry": "index.html",
  "capabilities": {
    "draggable": true,
    "resizable": true
  },
  "inputs": {
    "generate": {
      "type": "object",
      "description": "Generate video with config { prompt, imageUrl, duration, fps, etc. }"
    },
    "setApiKey": {
      "type": "object",
      "description": "Set API key { provider, apiKey }"
    },
    "setModel": {
      "type": "string",
      "description": "Set the model to use for generation"
    },
    "setProvider": {
      "type": "string",
      "description": "Set the AI provider"
    },
    "cancel": {
      "type": "trigger",
      "description": "Cancel current generation"
    },
    "syncPrompt": {
      "type": "object",
      "description": "Sync prompt configuration from Prompt Options widget"
    },
    "setInputImage": {
      "type": "object",
      "description": "Set input image for image-to-video { url, name }"
    }
  },
  "outputs": {
    "videoGenerated": {
      "type": "object",
      "description": "Emitted when video is generated { url, prompt, settings }"
    },
    "generationStarted": {
      "type": "object",
      "description": "Emitted when generation starts"
    },
    "generationProgress": {
      "type": "object",
      "description": "Emitted with generation progress"
    },
    "generationFailed": {
      "type": "object",
      "description": "Emitted when generation fails"
    },
    "sendToGallery": {
      "type": "object",
      "description": "Send generated video to gallery"
    }
  },
  "events": {
    "listens": ["prompt:changed", "prompt:generate-requested", "gallery:image-selected"],
    "emits": ["video:generated", "video:generation-started", "video:generation-failed"]
  },
  "size": {
    "width": 420,
    "height": 580,
    "minWidth": 350,
    "minHeight": 450,
    "maxWidth": 800,
    "maxHeight": 900
  }
}
